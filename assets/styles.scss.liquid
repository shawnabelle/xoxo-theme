/* FAQ */
.faq {
  border-radius: 8px;
  overflow: hidden;
}
.faq .tab-toggle {
  display: none;
}

.faq .tab-label::after {
  content:'\276f';
  transition: all .4s;
}
.faq .tab-toggle:checked ~ .tab-label::after {
  transform: rotate(90deg);
}

.faq .tab-toggle:checked ~ .tab-content {
  max-height: 100vh;
  padding: 1rem;
}

