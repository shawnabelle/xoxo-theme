/* Trending Products Group */

#products-group {
  padding: 50px 0 0 0;
  overflow: hidden;

  div[class*="col"] {
    margin-bottom: 50px;
    overflow: hidden;
  }

  h2 {
    font-size: 2rem;
    text-align: center;
    font-weight: 700;
    margin-bottom: 50px;
  }

  .product-bg {
    background: #fff;
    min-height: 300px;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: relative;
    margin-bottom: 2rem;

    .product-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: 50% 50%;
      cursor: pointer;
      transition: .5s ease-in-out;
      margin: 20px;
    }

    .overlay {
      background: #f9f9f9;
      position: absolute;
      height: 100%;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      transition: all .2s ease-in-out;
      opacity: 0;
      cursor: pointer;
      color: {{settings.highlight_color}};

      &:hover {
        opacity: .8;
      }

      .product-title {
        font-weight: 600;
        font-size: 1.3rem;
        text-transform: uppercase;
        text-align: center;
      }

      .product-price {
        font-weight: 900;
      }
    }
  }
}

