/*Collections Gallery Section*/

.collections-container {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-auto-rows: 100px 300px;
  grid-gap: 10px;
  padding: 50px;
  overflow: hidden;
  grid-auto-flow: dense;
}

.collection-title {
  text-align: center;
  float: left;
  width: 100%;
  position: relative;

  h2 {
    font-size: 25px;
    position: absolute;
    top: 70px;
    right: 0;
    left: 0;
    line-height: 1.1;
    display: inline-block;
    z-index: 1;
    text-transform: uppercase;
  }

  span {
    font-size: 100px;
    text-align: center;
    font-family: 'Kaushan Script', {{ subheading_font.family }}, 'Source Sans Pro', Arial, Helvetica, sans-serif;
    color: {{settings.highlight_color}};
    opacity: .2;
  }
}

.gallery-item {
  width: 100%;
  height: 100%;
  position: relative;

  .image {
    width: 100%;
    height: 100%;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: 50% 50%;
      cursor: pointer;
      transition: .5s ease-in-out;
    }
  }

  &:hover .image img {
    transform: scale(1.5);
  }

  .collections-text {
    opacity: 1;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 25px;
    text-align: center;
    z-index: 10;
    transition: .3s ease-in-out;
    -webkit-backdrop-filter: blur(5px) saturate(1.5);
    backdrop-filter: blur(5px) saturate(1.5);
    cursor: pointer;
    animation: move-down .3s linear;
    padding: 1em;
    width: 100%;
    border-top: 1px solid {{settings.highlight_color}};
    border-bottom: 1px solid {{settings.highlight_color}};

    a {
      text-transform: uppercase;
      color: #fff;
      letter-spacing: .5rem;
      text-decoration: none;
      cursor: pointer;
    }
  }
}

.w-1 {
  grid-column: span 1;
}

.w-2 {
  grid-column: span 2;
}

.w-3 {
  grid-column: span 3;
}

.w-4 {
  grid-column: span 4;
}

.w-5 {
