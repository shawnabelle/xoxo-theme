  color: #ffffff;
  font-size: 16px;
  margin: 10px;
  max-width: 330px;
  min-width: 350px;
  overflow: hidden;
  position: relative;
  text-align: left;
  width: 100%;
 
  * {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-transition: all 0.25s ease;
    transition: all 0.25s ease;
  }

  img {
    max-width: 100%;
    height: 500px;
    object-fit: cover;
    position: relative;
  }

  figcaption {
    padding: 25px 20px 25px;
    position: absolute;
    bottom: 0;
    z-index: 1;

    &:before {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      background: {{settings.highlight_color}};
      content: '';
