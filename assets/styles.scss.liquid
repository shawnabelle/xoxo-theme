/*Collections Gallery Section*/

.collections-container {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-auto-rows: 100px 300px;
  grid-gap: 10px;
  padding: 50px;
  overflow: hidden;
  grid-auto-flow: dense;
}

/*Section Subheading*/

.collection-title {
  text-align: center;
  float: left;
  width: 100%;
  position: relative;

  h2 {
    position: absolute;
    top: 65px;
    right: 0;
    left: 0;
    line-height: 1.1;
    display: inline-block;
    z-index: 1;
    text-transform: uppercase;
    font-size: (floor($font-size-header * 0.78));
 
  }

  span {
    font-size: 100px;
    text-align: center;
    font-family:  {{ subheading_font.family }}, 'Kaushan Script', 'Source Sans Pro', Arial, Helvetica, sans-serif;
    color: {{settings.highlight_color}};
    opacity: .1 !important;
    font-size: $font-size-subheading;
  
  }
}

.gallery-item {
  width: 100%;
  height: 100%;
  position: relative;

  .image {
    width: 100%;
    height: 100%;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: 50% 50%;
      cursor: pointer;
      transition: .5s ease-in-out;
    }
  }

  &:hover .image img {
    transform: scale(1.5);
  }

  .collections-text {
    opacity: 1;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 22px;
    font-weight: 500;
    text-align: center;
    z-index: 10;
    transition: .3s ease-in-out;
    -webkit-backdrop-filter: blur(5px) saturate(1.5);
    backdrop-filter: blur(5px) saturate(1.5);
    cursor: pointer;
    animation: move-down .3s linear;
    padding: 1em;
    width: 100%;
    border-top: 1px solid {{settings.highlight_color}};
    border-bottom: 1px solid {{settings.highlight_color}};

    a {
      text-transform: uppercase;
   
      letter-spacing: .2rem;
      text-decoration: none;
      cursor: pointer;
    }
  }
}

