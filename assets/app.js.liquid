/* Hero Animations */

if (heroNodes != null) {
  heroNodes.forEach((node) => {
    let heroTL = gsap.timeline();
    heroTL
  
    .fromTo(
    node.querySelectorAll('.hero-slide .hero-text'),
       { 
           opacity: 0,
           duration: 1
       },
       {
           opacity: 1,
           duration: 1
       }
   )
    .fromTo(
     node.querySelectorAll('.hero-slide  .hero-text h1'),
      {
          x: 1500,
          opacity: 0,
          duration: 1
      },
      {
          x: 0,
          opacity: 1
      }
  )
  .fromTo(
    node.querySelectorAll('.hero-slide .hero-text p'),
    {
      x: -1500,
      opacity: 0,
      duration: 1
  },
  {
      x: 0,
      opacity: 1
  },
  '>-.5'
  )
  .fromTo(
    node.querySelectorAll('.hero-slide .hero-text a'),
    {
      y: 500,
      opacity: 0
  },
  {
    y: 0,
    opacity: 1
  },
  '>-.5'
  )
  let heroScene = new ScrollMagic.Scene({
    triggerElement: node,
    triggerHook: 1,
    reverse: false,
    offset: 0,
    duration: 0
    })
    .setTween(heroTL)
    .addTo(homeController)

  })
}

  



