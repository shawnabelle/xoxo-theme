              {% else %}
                <img src="https://images.pexels.com/photos/2661256/pexels-photo-2661256.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500">
                {% endif %}
                </div>
                {%- if collection3.title != blank -%}
                <div class="collections-text"><a href="{{collection3.url}}">{{collection3.title}}</a></div>
                {% else %}
            <div class="collections-text"><a href="#">Face</a></div>
            {% endif %}
        </div>
          </div>
    
          <div class="collections-gallery w-2 h-3">
            <div class="gallery-item">
            <div class="image">
            {%- if collection4.image != blank -%}
            <img src="{{collection4.image | img_url: '600x'}}">  
  
              {% else %}
                <img src="https://images.pexels.com/photos/922532/pexels-photo-922532.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500">
                {% endif %}
                </div>
                {%- if collection1.title != blank -%}
                <div class="collections-text"><a href="{{collection4.url}}">{{collection4.title}}</a></div>
                {% else %}
            <div class="collections-text"><a href="#">Lips</a></div>
            {% endif %}
        </div>
          </div>

          <div class="collections-gallery w-1 h-4">
