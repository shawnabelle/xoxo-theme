
{%- assign collection1 = collections[section.settings.collection1] -%}
{%- assign collection2 = collections[section.settings.collection2] -%}
{%- assign collection3 = collections[section.settings.collection3] -%}
{%- assign collection4 = collections[section.settings.collection4] -%}
{%- assign collection5 = collections[section.settings.collection5] -%}

<section class="collections">
    <div class="collection-title">
        <h2>{{section.settings.gallery_heading}}</h2> 
        <span>{{section.settings.gallery_subheading}}</span>
    </div>


      <div class="collections-container">
    
          <div class="collections-gallery w-1 h-4">
              <div class="gallery-item">
              <div class="image">
                {%- if collection1.image != blank -%}
                <img src="{{ collection1.image | img_url: '600x'}}">  
      
                  {% else %}
                  <img src="https://images.pexels.com/photos/1125328/pexels-photo-1125328.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500">
                  {% endif %}
              </div>
              {%- if collection1.title != blank -%}
              <div class="collections-text"><a href="{{collection1.url}}">{{collection1.title}}</a></div>
              {% else %}
              <div class="collections-text"><a href="#">Eyes</a></div>
              {% endif %}
          </div>
        </div>
    
     
    
          <div class="collections-gallery w-2 h-3">
            <div class="gallery-item">
            <div class="image">
            {%- if collection2.image != blank -%}
