<section class="sale-promo">
        
    <div class="overlay">
    <a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
</div>

<div class="promo-bg">
    {%- if section.settings.promo_image != blank -%}
    <a href="{{ section.settings.button_link }}"><img src="{{ section.settings.promo_image | img_url: '1200x'}}"></a>
    {% else %}
    <a href="{{ section.settings.button_link }}"><img src="{{ 'beauty-trends.jpg' | asset_img_url: '1200x' }}"></a>
    {% endif %}
</div>
</section>

{% schema %}
  {
      "name": "Single Image",
    "settings": [
        {
            "id": "promo_image",
            "type": "image_picker",
            "label": "Chose Your Image"
          },
      {
        "type": "url",
        "id": "button_link",
        "label": "Image Destination"
      }
      ],
      "presets": [
    {
      "name": "Single Image",
      "category": "Image"
    }
  ] 
      }  
   
   {% endschema %}

