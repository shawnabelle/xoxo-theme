
<div class="swiper-container hero">
 
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
    {%- if block.settings.slider_image != blank -%}
    <div class="swiper-slide"><img src="{{ block.settings.slider_image | img_url: '1200x'}}"></div>
{% else %}
    <div class="swiper-slide"><img src="{{ 'models2.jpeg' | asset_url }}"></div>
    <div class="swiper-slide"><img src="{{ 'models.jpeg' | asset_url }}"></div>
    <div class="swiper-slide"><img src="{{ 'models3.jpeg' | asset_url }}"></div>
    <div class="swiper-slide"><img src="{{ 'models4.jpeg' | asset_url }}"></div>
 {% endif %}
    {% endfor %}
</div>

  <div class="swiper-scrollbar"></div>
</div> 

  <div class="slider-text">
      <h1>{{section.settings.hero_h1}}</h1>
      <p>{{section.settings.hero_p}} </p>
      <a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
</div>

{% schema %}
  {
      "name": "Hero",
    "settings": [
   
   {
				"type": "text",
				"id": "hero_h1",
				"label": "Hero Title",
        "default": "Summer Collection"
      },
      {
				"type": "text",
				"id": "hero_p",
				"label": "Hero Paragraph Title",
          "default": "Check out our hydrating collection for summer fun"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Shop Now",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
      ],
      "blocks": [
      {
        "type": "image",
        "name": "Image For Slideshow",
        "limit": 5,
      "settings": [
      
        {
          "id": "slider_image",
          "type": "image_picker",
          "label": "Chose Your Image"
        }
      ]
    }
      ]  
      }  
   
   {% endschema %}

